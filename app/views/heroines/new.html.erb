<%= form_for @heroine do |f| %>
  <div class="name_fields">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
    <%= f.label :power_id %>
    <%= f.collection_select :power_id, @powers, :id, :name, selected: params[:power_id] %>
  </div>

  <br>

  <%= f.submit %>

<% end %>

