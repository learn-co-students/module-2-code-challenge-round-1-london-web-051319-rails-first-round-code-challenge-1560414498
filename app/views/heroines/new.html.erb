<h1>create a heroine</h1>
<% if @heroine.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@heroine.errors.count, "error") %>
      heroine name taken
    </h2>

    <ul>
    <% @heroine.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@heroine) do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name %>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>

  <%= collection_select(:heroine, :power_id, Power.all, :id, :name) %>

  <%= f.submit %>
<% end %>
