<section class="hero is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Create New Heroine
      </h1>
    </div>
  </div>
</section>

<%=form_for(@heroine) do |f|%>

<%=f.label :name%>
<%=f.text_field :name%><br>

<%=f.label :super_name%>
<%=f.text_field :super_name%><br>

<%=f.label :power_id%>
<%=f.collection_select :power_id, Power.all, :id, :name%><br>

<%=f.submit%>

<%end%>
