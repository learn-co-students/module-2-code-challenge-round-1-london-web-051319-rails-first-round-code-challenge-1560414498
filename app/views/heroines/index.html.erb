<h2>All Heroines</h2>


<%= form_tag(heroines_path, method: :get) do %>
  <%= label_tag(:search, "Search by superpower:") %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>

<br>
<hr>

<%= button_to("Add Heroine", new_heroine_path, :method => :get, :form_class => "heroine-btn-class") %>
