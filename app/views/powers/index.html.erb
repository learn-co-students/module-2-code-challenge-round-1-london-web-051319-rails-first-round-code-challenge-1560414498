<h2>All Superpowers</h2>

<ul>
  <% @powers.each do |power| %>
    <li>
      <%= link_to power.name.capitalize, power %>
      <br>
      Description: <%= power.description.capitalize %>
    </li>
    <br>
  <% end %>
</ul>

<br>
<hr>

<%= button_to("Add Superpower", new_power_path, :method => :get, :form_class => "power-btn") %>
